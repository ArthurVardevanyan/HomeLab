---
# .ansible-lint
exclude_paths:
  - .cache
  - .git
  - .github
  - .pre-commit-config.yaml
  - .checkov.yaml
  - .devfile.yaml
  - kubernetes/
  - terraform/
  - notes/
  - machineConfigs/
  - okd/
  - sandbox/
  - tekton/
  - vms/

# Some rules can be noisy, you can skip them here if needed
skip_list:
  - experimental
